// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
  output = "../node_modules/prisma/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      UserRole
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  medicalRecords MedicalRecord[]
  Consultation   Consultation[]
  @@map("users")
}

model Patient {
  id        Int      @id @default(autoincrement())
  name      String
  birthDate DateTime
  gender    Gender
  address   String
  phone     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  medicalRecords MedicalRecord[]
  Consultation   Consultation[]
  @@map("patients")
}

model MedicalRecord {
  id          Int      @id @default(autoincrement())
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  userId    Int
  patientId Int
  user      User    @relation(fields: [userId], references: [id])
  patient   Patient @relation(fields: [patientId], references: [id])
  @@map("medical_records")
}

model Consultation {
  id        Int      @id @default(autoincrement())
  date      DateTime
  diagnosis String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  userId    Int
  patientId Int
  user      User    @relation(fields: [userId], references: [id])
  patient   Patient @relation(fields: [patientId], references: [id])
  @@map("consultations")
}

enum UserRole {
  ADMIN
  NURSE
}

enum Gender {
  MALE
  FEMALE
}
